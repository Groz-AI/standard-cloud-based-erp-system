{
  "name": "retail-erp-pos",
  "version": "1.0.0",
  "description": "Multi-tenant Retail ERP + POS System",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "npm run dev --workspace=@retail-erp/backend",
    "dev:frontend": "npm run dev --workspace=@retail-erp/frontend",
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces",
    "db:migrate": "npm run db:migrate --workspace=@retail-erp/backend",
    "db:seed": "npm run db:seed --workspace=@retail-erp/backend",
    "db:reset": "npm run db:reset --workspace=@retail-erp/backend"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
